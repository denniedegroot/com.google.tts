{
    "id": "com.google.tts",
    "name": {
        "en": "Google TTS"
    },
    "version": "1.3.0",
    "compatibility": "",
    "sdk": 2,
    "author": {
        "name": "Dennie de Groot",
        "email": "mail@denniedegroot.nl",
        "website": "https://denniedegroot.nl"
    },
    "contributors": {
        "developers": [{
            "name": "Dennie de Groot",
            "email": "mail@denniedegroot.nl",
            "website": "https://denniedegroot.nl"
        }]
    },
    "contributing": {
        "donate": {
            "paypal": {
                "username": "denniedegroot"
            }
        }
    },
    "description": {
        "en": "Google TTS support for Homey",
        "nl": "Google TTS ondersteuning voor Homey",
        "de": "Google TTS Unterstützung für Homey"
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "category": "tools",
    "flow": {
        "actions": [
            {
                "id": "tts",
                "title": {
                    "en": "Say something",
                    "nl": "Zeg iets",
                    "de": "Sprich etwas"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Choose a device",
                            "nl": "Kies een apparaat",
                            "de": "Wähle ein Gerät"
                        }
                    },
                    {
                        "name": "language",
                        "type": "dropdown",
                        "values": [
                            {
                                "id": "en",
                                "label": {
                                    "en": "English",
                                    "nl": "Engels",
                                    "de": "Englisch"
                                }
                            },
                            {
                                "id": "nl",
                                "label": {
                                    "en": "Dutch",
                                    "nl": "Nederlands",
                                    "de": "Niederländisch"
                                }
                            },
                            {
                                "id": "de",
                                "label": {
                                    "en": "German",
                                    "nl": "Duits",
                                    "de": "Deutsch"
                                }
                            },
                            {
                                "id": "cs",
                                "label": {
                                    "en": "Czech",
                                    "nl": "Tsjechisch",
                                    "de": "Tschechisch"
                                }
                            },
                            {
                                "id": "da",
                                "label": {
                                    "en": "Danish",
                                    "nl": "Deens",
                                    "de": "Dänisch"
                                }
                            },
                            {
                                "id": "es",
                                "label": {
                                    "en": "Spanish",
                                    "nl": "Spaans",
                                    "de": "Spanisch"
                                }
                            },
                            {
                                "id": "fr",
                                "label": {
                                    "en": "French",
                                    "nl": "Frans",
                                    "de": "Französisch"
                                }
                            },
                            {
                                "id": "it",
                                "label": {
                                    "en": "Italian",
                                    "nl": "Italiaans",
                                    "de": "Italienisch"
                                }
                            },
                            {
                                "id": "hu",
                                "label": {
                                    "en": "Hungarian",
                                    "nl": "Hongaars",
                                    "de": "Ungarisch"
                                }
                            },
                            {
                                "id": "pl",
                                "label": {
                                    "en": "Polish",
                                    "nl": "Pools",
                                    "de": "Polieren"
                                }
                            },
                            {
                                "id": "pt",
                                "label": {
                                    "en": "Portuguese",
                                    "nl": "Portugees",
                                    "de": "Portugiesisch"
                                }
                            },
                            {
                                "id": "fi",
                                "label": {
                                    "en": "Finnish",
                                    "nl": "Fins",
                                    "de": "Finnisch"
                                }
                            },
                            {
                                "id": "sv",
                                "label": {
                                    "en": "Swedish",
                                    "nl": "Zweeds",
                                    "de": "Schwedisch"
                                }
                            },
                            {
                                "id": "tr",
                                "label": {
                                    "en": "Turkish",
                                    "nl": "Turks",
                                    "de": "Türkisch"
                                }
                            },
                            {
                                "id": "el",
                                "label": {
                                    "en": "Greek",
                                    "nl": "Grieks",
                                    "de": "Griechisch"
                                }
                            },
                            {
                                "id": "ru",
                                "label": {
                                    "en": "Russian",
                                    "nl": "Russisch",
                                    "de": "Russisch"
                                }
                            },
                            {
                                "id": "zh",
                                "label": {
                                    "en": "Chinese",
                                    "nl": "Chinees",
                                    "de": "Chinesisch"
                                }
                            },
                            {
                                "id": "ja",
                                "label": {
                                    "en": "Japanese",
                                    "nl": "Japans",
                                    "de": "Japanisch"
                                }
                            },
                            {
                                "id": "id",
                                "label": {
                                    "en": "Indonesian",
                                    "nl": "Indonesisch",
                                    "de": "Indonesisch"
                                }
                            }
                        ]
                    },
                    {
                        "name": "speed",
                        "type": "dropdown",
                        "values": [
                            {
                                "id": "normal",
                                "label": {
                                    "en": "Normal speech speed",
                                    "nl": "Normale spraak snelheid",
                                    "de": "Normales Sprechtempo"
                                }
                            },
                            {
                                "id": "slow",
                                "label": {
                                    "en": "Slow speech speed",
                                    "nl": "Langzame spraak snelheid",
                                    "de": "Langsames Sprechtempo"
                                }
                            }
                        ]
                    },
                    {
                        "name": "volume",
                        "type": "range",
                        "min": 0,
                        "max": 1,
                        "step": 0.01,
                        "label": "% Volume",
                        "labelMultiplier": 100,
                        "labelDecimals": 0
                    },
                    {
                        "name": "text",
                        "type": "text",
                        "placeholder": {
                            "en": "Text",
                            "nl": "Tekst",
                            "de": "Text"
                        }
                    }
                ]
            }
        ]
    }
}
